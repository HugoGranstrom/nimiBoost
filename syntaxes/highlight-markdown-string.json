{
  "scopeName": "nimiBoost.injection",
  "fileTypes": ["nim"],
  "injectionSelector": "L:source.nim",
  "patterns": [
    {
      "patterns": [
        {
          "include": "#markdown-in-nimib"
        },
        {
        "include": "#python-in-nimib"
        },
        {
        "include": "#nim-in-nimib"
        }
      ]
    }
  ],
  "repository": {
    "markdown-in-nimib": {
      "begin": "\\s*(?i)(f?md|hlMdF?)(\")(?=\"{2})",
      "beginCaptures": {
        "1": {
          "name": "support.function.any-method.nim"
        },
        "2": {
          "name": "string.quoted.triple.nim"
        }
      },
      "end": "\\s*(\"{3})",
      "endCaptures": {
        "1": {
          "name": "string.quoted.triple.nim"
        }
      },
      "patterns": [
        {
          "contentName": "meta.embedded.block.markdown",
          "begin": "(\"{2})",
          "beginCaptures": {
            "1": {
              "name": "string.quoted.triple.nim"
            }
          },
          "end": "\\s*(?=\"{3})",
          "patterns": [{"include": "text.html.markdown"}]
        }
        
      ]
    },
    "python-in-nimib": {
      "begin": "\\s*(?i)(hlPyF?)(\")(?=\"{2})",
      "beginCaptures": {
        "1": {
          "name": "support.function.any-method.nim"
        },
        "2": {
          "name": "string.quoted.triple.nim"
        }
      },
      "end": "\\s*(\"{3})",
      "endCaptures": {
        "1": {
          "name": "string.quoted.triple.nim"
        }
      },
      "patterns": [
        {
          "contentName": "source.python",
          "begin": "(\"{2})",
          "beginCaptures": {
            "1": {
              "name": "string.quoted.triple.nim"
            }
          },
          "end": "\\s*(?=\"{3})",
          "patterns": [{"include": "source.python"}]
        }
        
      ]
    },
    "nim-in-nimib": {
      "begin": "\\s*(?i)(hlNimF?)(\")(?=\"{2})",
      "beginCaptures": {
        "1": {
          "name": "support.function.any-method.nim"
        },
        "2": {
          "name": "string.quoted.triple.nim"
        }
      },
      "end": "\\s*(\"{3})",
      "endCaptures": {
        "1": {
          "name": "string.quoted.triple.nim"
        }
      },
      "patterns": [
        {
          "contentName": "source.nim",
          "begin": "(\"{2})",
          "beginCaptures": {
            "1": {
              "name": "string.quoted.triple.nim"
            }
          },
          "end": "\\s*(?=\"{3})",
          "patterns": [{"include": "source.nim"}]
        }
        
      ]
    },
    "markdown-in-nimib3": {
      "contentName": "meta.embedded.block.markdown",
      "begin": "(f?md)(\"{3})",
      "beginCaptures": {
        "1": {
          "name": "support.function.any-method.nim"
        },
        "2": {
          "name": "string.quoted.triple.nim"
        }
      },
      "end": "(\"{3})",
      "endCaptures": {
        "1": {
          "name": "string.quoted.triple.nim"
        }
      },
      "patterns": [{"include": "text.html.markdown"}]
    },
    "markdown-in-nimib2": {
      "contentName": "meta.embedded.block.markdown",
      "begin": "(n(?i)bText(?-i):)\\s*(.*)(\"\"\")",
      "beginCaptures": {
        "1": {
          "name": "source.nim"
        },
        "2": {
          "name": "support.function.any-method.nim"
        },
        "3": {
          "name": "string.quoted.triple.nim"
        }
      },
      "end": "\\s*(\"\"\")",
      "endCaptures": {
        "1": {
          "name": "string.quoted.triple.nim"
        }
      },
      "patterns": [{ "include": "text.html.markdown" }]
    }
  }
}
